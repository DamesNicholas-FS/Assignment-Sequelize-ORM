<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %}">
    
    {% if variant.id %}
        <input type="hidden" name="id" value="{{ variant.id }}" />
    {% endif %}

    <div>
        <label for="title">Title: </label><input type="text" name="title" id="title" placeholder="Name of Product" value={{ variant.title }}> <br /> <br />
        <label for="price">Price: </label><input type="text" name="price" id="price" placeholder="Price of Product" value={{ variant.price }}>
        <br /><br />
        <input type="submit" value="Submit"/>
    </div>
</form>