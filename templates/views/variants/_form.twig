<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %}">
    
    {% if variant.id %}
        <input type="hidden" name="id" value="{{ variant.id }}" />
    {% endif %}

    <div class="m-5">
        <div class="flex">
            <label class="pr-3 w-1/6 text-right" for="">Title: </label>
            <input class="border" type="text" placeholder="" value="{{ variant.title }}">
        </div>
        <div class="flex">
            <label class="pr-3 w-1/6 text-right" for="">Slug: </label>
            <input class="border" type="text" placeholder="" value="{{ variant.slug }}">
        </div>
        <div class="flex">
            <label class="pr-3 w-1/6 text-right" for="">Description: </label>
            <input class="border" type="text" placeholder="" value="{{ variant.description }}">
        </div>
        <div class="flex">
            <label class="pr-3 w-1/6 text-right" for="">Price: </label>
            <input class="border" type="text" placeholder="" value="{{ variant.price }}">
        </div>
        <div class="flex">
            <label class="pr-3 w-1/6 text-right" for="">Inventory: </label>
            <input class="border" type="text" placeholder="" value="{{ variant.inventory }}">
        </div>
        <div class="flex">
            <label class="pr-3 w-1/6 text-right" for="">productId: </label>
            <input disabled class="border" type="text" placeholder="" value="{{ variant.productId }}">
        </div>
        <div class="flex">
            <label class="pr-3 w-1/6 text-right" for="">Product Link: </label>
            <select class="border" name="productId">
                {% for product in products %}
                    <option value="{{ product.id }}" {% if product.id == variant.productId %} selected="selected" {% endif %}>{{ product.title }}</option>
                {% endfor %}
            </select>
        </div>
    

        <ul class="flex gap-4 mt-5">
            <input type="submit" value="Save" class=" bg-green-700 text-white rounded p-0.5 px-5">
            <li class=" bg-red-700 text-white rounded p-0.5 px-5"><a href="/variants">Cancel</a></li>
        </ul>
    </div>

</form>

