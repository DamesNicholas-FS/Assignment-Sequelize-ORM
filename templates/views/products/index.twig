            <ul class="flex gap-4">
                <li class=" bg-purple-700 text-white rounded p-0.5 px-3">Create Variant</li>
                <li class=" bg-blue-700 text-white rounded p-0.5 px-5"><a href="/products/{{ product.id }}">View / Edit<a></li>
                <li class=" bg-red-700 text-white rounded p-0.5 px-5"><a href="/products/{{ product.id }}/delete">Delete</a></li>
            </ul>
        </div>

    {% endfor %}

