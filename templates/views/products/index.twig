{% extends 'layouts/base.twig' %}

{% block title %}All Prodcuts{% endblock %}

{% block main %}
    <h2>All Products:</h2>

    {% if products is empty %}
        <p>No products found.</p>
    {% else %}
    <ul>
        {% for product in products%}
            <li>
                Name: {{ product.title }} | Price: ${{ product.price }} -
                <a href="/products/{{ product.id }}">Edit</a>
                <a href="/products/{{ product.id }}/delete">Delete</a>
            </li>
        {% endfor %}
    </ul>
    {% endif %}

    <a href="/products/new">Create New Product</a> <br> <br>
    <a href="/variants/new">Create Variant</a> <a href="/variants">View Variants</a>
{% endblock %}

